<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HelloXamarin.MvvmPlaylistsPage">
  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Add" Clicked="OnAddPlaylist" />
  </ContentPage.ToolbarItems>
  <ListView x:Name="playlistsListView" ItemSelected="OnPlaylistSelected">
    <ListView.ItemTemplate>
      <DataTemplate>
        <TextCell
					Text="{Binding Title}"
					Detail="{Binding IsFavorite, StringFormat='Favorite: {0}'}"
					TextColor="{Binding Color}"
					/>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>
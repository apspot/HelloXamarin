<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloXamarin.StackExcercise2Page"
             Title="Stack layout excercise 2">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
      iOS="0, 20, 0, 0">
    </OnPlatform>
  </ContentPage.Padding>
  <StackLayout HorizontalOptions="Center">
    <Label Text="nyc_photographer" Margin="10, 0, 0, 0"/>
    <Image Source="http://lorempixel.com/1920/1080/nature/3/" Aspect="AspectFit"/>
    <StackLayout Orientation="Horizontal" Spacing="20" Padding="10, 0">
      <Button Text="Like"/>
      <Button Text="Comment"/>
      <Button Text="Share"/>
    </StackLayout>
    <StackLayout Padding="10">
      <BoxView Color="#f0f0f0" HeightRequest="1"/>
      <Label Text="700 likes" FontAttributes="Bold"/>
      <Label TextColor="#444" Text="This is a shot yesterday in Skanor, Sweden, when driving home, from a couple of days of work in Denmark." />
    </StackLayout>
  </StackLayout>
</ContentPage>